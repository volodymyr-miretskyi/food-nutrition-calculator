{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@db/*": [
        "./libs/db/*"
      ],
      "@dto/*": [
        "./libs/common/dto/*"
      ],
      "@interfaces/*": [
        "./libs/common/interfaces/*"
      ],
      "@libs/*": [
        "./libs/*"
      ],
      "@schemas/*": [
        "./libs/db/schemas/*"
      ]
    }
  }
}